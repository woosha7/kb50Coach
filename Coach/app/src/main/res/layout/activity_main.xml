<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/fullscreen_content"
    tools:context=".MainActivity" >

    <TableLayout
        android:id="@+id/Grid"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ddd"
        android:keepScreenOn="true" >

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TableRow
            android:id="@+id/Row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:layout_height="wrap_content"
                android:id="@+id/players"
                android:layout_weight=".33"
                android:background="@drawable/spelers"
                android:onClick="playersClicked"/>

            <ImageButton
                android:layout_height="wrap_content"
                android:id="@+id/draft"
                android:layout_weight=".33"
                android:background="@drawable/spelers"
                android:onClick="draftClicked"/>

            <ImageButton
                android:layout_height="wrap_content"
                android:id="@+id/administration"
                android:layout_weight=".33"
                android:background="@drawable/spelers"
                android:onClick="administrationClicked" />

        </TableRow>
        <TableRow
            android:id="@+id/Row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:layout_height="wrap_content"
                android:id="@+id/match"
                android:layout_weight=".33"
                android:background="@drawable/spelers"
                android:onClick="matchClicked" />

            <ImageButton
                android:layout_height="wrap_content"
                android:id="@+id/whistletool"
                android:layout_weight=".33"
                android:background="@drawable/spelers"
                android:onClick="whistletoolClicked"/>

            <ImageButton
                android:layout_height="wrap_content"
                android:id="@+id/newteam"
                android:layout_weight=".33"
                android:background="@drawable/spelers"
                android:onClick="newteamClicked"/>
        </TableRow>
        <TableRow
            android:id="@+id/Row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

        </TableRow>
    </TableLayout>

</LinearLayout>
